<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.location_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Registrer temperatur" />


    <TextView
        android:id="@+id/temp1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Temperatur over:"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/temp_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-565dp"
        android:layout_marginRight="20dp"
        android:autofillHints="Temperatur i celsius"
        android:drawablePadding="10dp"
        android:paddingBottom="20dp" />

    <TextView
        android:id="@+id/temp2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/temp_over"
        android:layout_marginTop="21dp"
        android:text="Trigger temperatur:"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/trigger_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-450dp"
        android:layout_marginRight="20dp"
        android:autofillHints="Temperatur i celsius"
        android:drawablePadding="10dp"
        android:paddingBottom="20dp"
        android:inputType = "number"/>

    <Button
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/trigger_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#666666"
        android:text="Lagre"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</RelativeLayout>