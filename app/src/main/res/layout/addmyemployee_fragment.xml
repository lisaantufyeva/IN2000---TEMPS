<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/card_background"
    tools:context=".ui.employees.add_my_employee.AddMyEmpoyeeFragment"
        tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/updateemployee"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/legg_til_en_ansatt"
        android:textColor="#282F3E"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible" />




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_navn"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"

        android:hint="@string/hint_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/et_navn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DADEE7"
            android:background="@drawable/rounded_corner_view"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="@string/hint_name"
            android:autofillHints="Navn" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_navn">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="E-mail"
            android:backgroundTint="#DADEE7"
            android:hint="@string/hint_e_mail"
            android:background="@drawable/rounded_corner_view"
            android:inputType="text"
            android:textSize="15sp"
            tools:ignore="TextFields" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_rolle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/hint_rolle"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_email">

        <EditText
            android:id="@+id/et_rolle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Rolle"
            android:hint="@string/hint_rolle"
            android:backgroundTint="#DADEE7"
            android:background="@drawable/rounded_corner_view"
            android:inputType="text"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/btn_add_employee"
            android:layout_width="173dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_corners_button"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/legg_til_button"
            android:textAllCaps="false"
            android:textColor="@color/text_grey"
            android:textSize="20sp"
            app:backgroundTint="@color/button_yellow"  />
</LinearLayout>


